.pr0d-logo
	position: relative
	top: 50%
	left: 50%
	// margin-top: -25px
	margin-left: -17px
	background url('/images/logo.png') -10px -70px no-repeat
	height: 50px
	width: 34px
	transition opacity 1s
	&.inverted
		background url('/images/logo-inverted.png') -10px -70px no-repeat
	&.pr0d-logo:before
		transition opacity 1s
		content: ""
		display: block
		position: relative
		background url('/images/logo.png') -10px -130px no-repeat
		left: -66px
		height: 50px
		width: 66px
		opacity: 0
	&.pr0d-logo.inverted:before
		background url('/images/logo-inverted.png') -10px -130px no-repeat
	&.pr0d-logo:after
		transition opacity 1s
		content: ""
		display: block
		position: relative
		background url('/images/logo.png') -10px -10px no-repeat
		top: -50px
		left: 34px
		height: 50px
		width: 31px
		opacity: 0
	&.pr0d-logo.inverted:after
		background url('/images/logo-inverted.png') -10px -10px no-repeat
	&.open
		&.pr0d-logo:before
			opacity: 1
		&.pr0d-logo:after
			opacity: 1

